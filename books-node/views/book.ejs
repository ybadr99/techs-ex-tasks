<%- include('./inc/header.ejs') %>
<section class="my-5 container col-6">
  <form method="POST">
    <div class="mb-3">
      <input
        class="form-control"
        name="title"
        placeholder="title"
        value="<%= book.title  %> "
        disabled
      />
    </div>
    <div class="mb-3">
      <input
        class="form-control"
        name="desc"
        placeholder="description"
        value="<%= book.desc  %> "
        disabled
      />
    </div>
    <div class="mb-3">
      <input
        class="form-control"
        name="author"
        placeholder="author"
        value="<%= book.author  %> "
        disabled
      />
    </div>
    <div class="mb-3">
      <input
        class="form-control"
        type="number"
        name="pages"
        placeholder="page numbers"
        value="<%= book.pages  %>"
        disabled
      />
    </div>
    <div class="form-group col-3 d-flex">
      <label for="" class="me-5">Category</label>
      <select name="type" id="productType" class="form-control mb-5">
        <option value="">none</option>
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
      </select>
    </div>
    <div class="mb-3">
      <button class="btn btn-primary">Add</button>
    </div>
  </form>
</section>
